<%= link_to 'New Upload', new_site_upload_path(@site), class: 'pure-button button-green' %>

<table class="pure-table pure-table-striped full-width">
  <thead>
    <tr>
      <th>Name</th>
      <th>Updated By</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% uploads.each do |upload| %>
      <tr>
        <td><%= link_to upload.name, upload.file.url %></td>
        <td><%= upload.updated_by %></td>
        <td class="minimal">
          <%= link_to 'Edit', edit_upload_path(upload), class: 'pure-button button-orange' %>
          <%= link_to 'Delete', upload_path(upload), method: :delete,
            class: 'pure-button button-red', data: { confirm: 'Are you sure you want to delete this upload?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @uploads %>


