<%= simple_form_for @site, html: { class: 'pure-form-aligned' } do |f| %>
  <%= f.input :name, input_html: { class: 'pure-input-1' } %>
  <%= f.input :host, input_html: { class: 'pure-input-1' } %>
  <% if RokBlog %>
    <%= f.input :blog_base, input_html: { class: 'pure-input-1' } %>
  <% end %>
  <%= f.input :scss, label: 'SCSS', input_html: { class: 'pure-input-1 code-editor',
    rows: 10, data: { mode: 'sass' }.merge(@editor_settings) } %>
  <%= f.input :javascript, input_html: { class: 'pure-input-1 code-editor', rows: 10,
    data: { mode: 'javascript' }.merge(@editor_settings) } %>
  <%= render 'form_actions' %>
<% end %>

